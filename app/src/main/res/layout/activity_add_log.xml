<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LBlue"
    tools:context=".Add_log">

    <EditText
        android:id="@+id/etDete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:hint="Enter the date"
        android:textColorHint="@color/black"
         />

    <EditText
        android:id="@+id/etMinutesPlyd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Enter the minutes played"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/etGenre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Enter the game genre"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/etRating"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Enter the Rating"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/addBtn"
        android:backgroundTint="@color/Blue"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"
        android:text="Add Details"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"/>


</LinearLayout>